<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_back"
    tools:context="com.rbworks.dev.cquiz.com.rbwdcq.MainAbout">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:id="@+id/aboutlogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="20dp"
            app:cardElevation="5dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:layout_width="match_parent"
android:background="@drawable/input_outline"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:padding="20dp"
                android:text="C Quiz "
                android:textColor="#000000"
                android:textSize="25sp" />
        </android.support.v7.widget.CardView>


        <ImageView
            android:layout_width="300dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:background="@drawable/input_outline"
            android:src="@drawable/logofianl" />



        <android.support.v7.widget.CardView
            android:id="@+id/developedby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="20dp"
            app:cardElevation="5dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:layout_width="match_parent"

                android:layout_height="match_parent"
android:background="@drawable/input_outline"
                android:fontFamily="serif"

                android:padding="20dp"
                android:gravity="left"
                android:text="Developed By : "
                android:textColor="#000000"
                android:textSize="25sp" />







        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:id="@+id/developedbyname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="20dp"
            app:cardElevation="5dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"

            android:layout_height="75dp"

            android:layout_gravity="right"

            android:layout_margin="20dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/input_outline"
            android:fontFamily="serif"
            android:gravity="right"
            android:padding="20dp"
            android:text="Rohit D. Bhokarikar "
            android:textColor="#000000"
            android:textSize="25sp" />


        <TextView
            android:layout_width="match_parent"

            android:layout_height="match_parent"

            android:fontFamily="serif"

            android:padding="20dp"
            android:gravity="left"
            android:text="Follow Us on : "
            android:textColor="#000000"
            android:textSize="25sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <ImageView
                android:id="@+id/yotubefinal"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_marginBottom="9dp"

                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:background="@drawable/input_outline"
                android:src="@drawable/youtube" />

            <ImageView
                android:id="@+id/logofb"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="9dp"
                android:layout_marginRight="9dp"
                android:background="@drawable/input_outline"
                android:foregroundGravity="right"
                android:src="@drawable/facebook" />

        </RelativeLayout>

        </LinearLayout>
    </ScrollView>
